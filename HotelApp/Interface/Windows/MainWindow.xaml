<Window x:Class="HotelApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView Name="roomListView" ItemsSource="{Binding RoomViewModels}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Room Number" Width="100" DisplayMemberBinding="{Binding RoomNumber}" />
                    <GridViewColumn Header="Class" Width="100" DisplayMemberBinding="{Binding Class}" />
                    <GridViewColumn Header="Price Per Night" Width="100" DisplayMemberBinding="{Binding PricePerNight}" />
                    <GridViewColumn Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Reserve" Click="ReserveButton_Click" Tag="{Binding RoomNumber}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
